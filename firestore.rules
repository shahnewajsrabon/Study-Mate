rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is the hardcoded admin
    function isAdmin() {
      return request.auth.token.email == 'channel.data.transfer@gmail.com';
    }

    // User Profile Rules
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // Study Groups Rules
    match /groups/{groupId} {
      // Anyone logged in can read group list (or you can restrict to memberIds)
      allow read: if request.auth != null;
      
      // Only the creator or admin can update group settings
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.createdBy == request.auth.uid || isAdmin());

      // Chat Messages (Subcollection)
      match /messages/{messageId} {
        // Only members who are in the group's memberIds array can read/write messages
        allow read, write: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.memberIds;
      }
    }
  }
}
